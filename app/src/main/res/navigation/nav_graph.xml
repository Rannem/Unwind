<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashActivity">

    <activity
        android:id="@+id/splashActivity"
        android:name="dev.kotlin.unwind.activity.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" >
        <action
            android:id="@+id/action_splashActivity_to_mainStartpage"
            app:destination="@id/mainStartpage" />
    </activity>
    <activity
        android:id="@+id/mainStartpage"
        android:name="dev.kotlin.unwind.MainStartpage"
        android:label="activity_main_startpage"
        tools:layout="@layout/activity_main_startpage" >
        <action
            android:id="@+id/action_mainStartpage_to_searchActivity"
            app:destination="@id/searchActivity" />
    </activity>
    <activity
        android:id="@+id/searchActivity"
        android:name="dev.kotlin.unwind.activity.SearchActivity"
        android:label="activity_search"
        tools:layout="@layout/activity_search" />
</navigation>